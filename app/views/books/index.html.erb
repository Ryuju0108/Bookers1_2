<div class="flash">
	<%= flash[:create] %>
	<%= flash[:notice_destroy] %>
</div>
<div class="table">
<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>Title</th><th>Body</th><th></th><th></th><th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td><td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>


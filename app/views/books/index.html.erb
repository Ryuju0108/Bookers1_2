<div class="form">

<h3>New Book</h3>

<%= form_for(@book) do |f| %>
<% render 'layouts/error_messages', book: @book %>


<div class="title">
	<p>Title</p>
	<%= f.text_field :title %>
</div>
<div class="body">
	<p>Body</p>
	<%= f.text_area :body %>
	</div>
	<br>
	<%= f.submit 'Create Book' %>
<% end %>

</div>
<div class="edit">
<h1>Editing Book</h1>

<% if @book.errors.any? %>
	<div id="error">
		<h2><%= @book.errors.count %>errors prohibited this book from being saved: </h2>
		<ul>
		<%= @book.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>
<%= form_for(@book) do |f| %>
	<% render partial: 'layouts/error_messages', book: @book %>


	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'Update Book' %>
	<br>
	<%= link_to "Show", book_path(@book) %> |
	<%= link_to "Back", root_path %>
<% end %>
</div>